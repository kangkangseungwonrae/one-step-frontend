{
  "$ref": "#/definitions/recursiveSchema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "recursiveSchema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string"
        }
      },
      "patternProperties": {
        "^[0-9].*$": {
          "type": "string"
        },
        "^[A-Za-z].*$": {
          "oneOf": [{ "type": "string" }, { "$ref": "#/definitions/recursiveSchema" }]
        }
      }
    }
  }
}
